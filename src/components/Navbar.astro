---
import NavItem from "./NavItem.astro";
---

<div
  class="navbar sticky top-0 bg-base-100 backdrop-blur backdrop-brightness-50 drop-shadow-lg z-10"
>
  <div class="navbar-start">

    <ul class="menu menu-horizontal px-1">
      <li>
        <a href="/" class="align-bottom text-bold normal-case text-xl font-['Researcher']">JONATHAN</a>
      </li>
    </ul>
  </div>

  <div class="navbar-center">
    <div class="hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        <NavItem href="/" title="Home" />
        <NavItem href="https://flame.jonthan.xyz/" title="Dashboard" />
        <NavItem href="https://blog.jonthan.xyz/" title="Blog" />
        <NavItem href="/posts" title="Work Experience" />
      </ul>
    </div>
  </div>

  <div class="navbar-end">
    <select class="select select-ghost" aria-label="Colorscheme picker" data-choose-theme>
      <option value="light">Light</option>
      <option value="lofi">Lofi</option>
      <option value="dark">Dark</option>
      <option value="dracula">Dracula</option>
      <option value="valentine">Valentine</option>
      <option value="cyberpunk">Cyberpunk</option>
      <option value="black">Black</option>
      <option value="retro">Retro</option>
      <option value="synthwave">Synthwave</option>
    </select>
  </div>
</div>
